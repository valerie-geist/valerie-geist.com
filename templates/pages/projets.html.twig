{% extends './base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('stylesheets/home-style.css') }}">
    <link rel="stylesheet" href="{{ asset('stylesheets/projets-style.css') }}">
{% endblock %}


{% block body %}

<div class="container case case-verte mt-4 p-3">
    <h1>Mes projets Web</h1>
</div>

{% for projet in projets %}
<div class="container case case-noire mt-3 mb-5 pt-4">
    <h2>{{ projet.name }}</h2>
    <div class="separation"></div>

    <div class="ml-4 padding pb-4 mt-5">
        <div class="row">
            <div class="col-sm col-md col-lg">
                <div>
                    <h3>Type de projet :</h3>
                    <div class="indent"> {{ projet.type }} </div>
                </div>
                <div class="mt-3">
                    <h3>Date du projet :</h3>
                    <div class="indent"> {{ projet.date }} </div>
                </div>
                <div class="mt-3">
                    <h3>Langages, frameworks et outils utilis√©s :</h3>
                    <div class="indent"> {{ projet.language }} </div>
                </div>
                <div class="mt-3">
                    <h3>Responsive :</h3>
                    <div class="indent"> {{ projet.responsive }} </div>
                </div>
            </div>
            {% if projet.image != NULL %}
            <div class="col-sm-6 col-md-6 col-lg-6 align-self-center">
                <div class="ml-4 mr-4 image-projet">

                        <img src="{{ asset('medias/images-projets/')}}{{ projet.image }}" width="100%">

                </div>
            </div>
            {% endif %}
        </div>
        <div class="mt-3 mr-4">
            <h3>Description :</h3>
            <div class="indent" > {{ projet.description }} </div>
        </div>
        <div class="mt-4 lien-projet">
            <a href="{{ projet.url }}" target="blank" class="btn btn-lg bouton-projet">Voir le projet</a>
        </div>
    </div>

</div>
</div>



{% endfor %}

{% endblock %}